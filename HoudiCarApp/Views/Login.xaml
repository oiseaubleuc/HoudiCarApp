<Window x:Class="HoudiCarApp.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="400" Width="400" Background="#121212">

    <Grid>
        <!-- Header -->
        <StackPanel Background="#FF6F00" Height="60" VerticalAlignment="Top">
            <TextBlock Text="Login" FontSize="24" Foreground="White" 
                       HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
        </StackPanel>

        <!-- Login Formulier -->
        <StackPanel Margin="20,80,20,0">
            <TextBlock Text="Gebruikersnaam" FontSize="14" Foreground="Orange" Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameTextBox" Height="40" Margin="0,10,0,10" Padding="10" FontSize="16"
                     Background="#333333" Foreground="White"/>

            <TextBlock Text="Wachtwoord" FontSize="14" Foreground="Orange" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Height="40" Margin="0,10,0,10" Padding="10" FontSize="16"
                         Background="#333333" Foreground="White"/>

            <!-- Login Knop -->
            <Button Content="Login" Background="Orange" Foreground="White" 
                    FontSize="18" FontWeight="Bold" Height="50" Margin="0,20,0,0" 
                    Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
